<header>
  <h1>Books</h1>
  <ul>
    <li><a href="<%= books_path(@conn, :add) %>">Add book</a></li>
  </ul>
</header>

<section class="books">
  <ul>
    <%= for book <- @books do %>
      <li>
        <a href="<%= books_path(@conn, :show, book.slug) %>">
          <%= book.title %>
        </a>
      </li>
    <%= end %>
  </ul>
</section>
